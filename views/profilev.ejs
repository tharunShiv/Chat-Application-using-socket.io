<html>
    
    <head>
        <title>DSCE | Welcome</title>
        <meta charset="UTF-8">
        <meta name="keywords" content="dsce,dayananda,sagar,college,of,engineering,faculty,database,contact,faculties,mini,project">
        <meta name="author" content="Tharun K">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <meta name="description" content="A faculty contact Database">
            <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
    </head>
    
    <body>


            <% include partials/layout.ejs %>
    <br/>
    <div class="container-fluid">
            <div class="row">
                
           <div class="col-md-3" style="color:firebrick;" align="center">
                        
                <h4>Welcome <u><%= user.name %></u></h4>
                                            
                <ul class="list-group">
                        <li class="list-group-item"><a href="/users/chat" class="list">ChatRoom</a></li>
                        <li class="list-group-item"><a href="/users/home" class="list">Search Faculties</a></li>
                        <br/>
                        <li class="list-group-item"><a href="/users/update" class="list">Update about Yourself</a></li>
                        <li class="list-group-item"><a href="/users/update" class="list"></a><a href="/users/profilev" class="list">View your Profile</a></li> 
                    </ul>
                        <br/>
                    </div>
                    <div class="col-md-2"></div>
   <div class="col-md-5" >
       <h3 align="center">Your Profile</h3>
       <% users.forEach(function(el,index) { %>
        <li><span style="font-size:25px; text-decoration:underline;">Name:</span> <span style="font-size:25px;text-transform:capitalize;"> <%= el.name %> </span> </li>
        <li><span style="text-decoration:underline;font-size:20px">Designation</span>: <%= el.designation %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Part Of</span>: <%= el.mdesignation  %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Field Of Interest</span>: <%= el.foi %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Expert In</span>: <%= el.ei %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Department</span>: <%= el.department %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Email-Id</span>: <%= el.email %> </li>
        <li><span style="text-decoration:underline;font-size:20px">Phoneno</span>: <%= el.phoneno %> </li><br/>
        <hr>
     <%  }); %>
            </div>
            <div class="col-md-2"></div>
    </div>
    <footer class="fabout">
            <p><a href="/users/contactus">Contact Us </a>for any Queries or to Report any bug </p>
        </footer>
    </div>
  
  
        

    </body>
    </html>